<div class="well well-small">
    <p>
        <strong>Share Referral Links</strong>
    </p>
    <div>
        <div class="hidden" id="longUrl">{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}</div>
        <div class="label label-inverse" id="longUrlPopover"
             data-content="<div><a href='{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}'>{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}</a></div>"
             data-placement="left"
             data-html="true"
             data-title="Original Referral URL">Link</div>
        <br />
        <div class="label label-inverse">Short Link</div>
        <div id="shortUrl"><i>coming soon!</i></div>
