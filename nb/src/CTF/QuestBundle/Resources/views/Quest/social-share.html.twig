    <hr />
    <div class="g-plus" data-action="share" data-annotation="vertical-bubble" data-width="200" data-expandto="left" data-href="{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}"></div>
    <hr />
    <div>
        <a id="twitter_share" href="https://twitter.com/share" class="twitter-share-button" data-url="{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}" data-text="Ehack! ARE YOU HAC-KING TODAY? Check out!" data-via="EHACK" data-size="large" data-hashtags="ehack,ctf">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    </div>
</div>

<script type="text/javascript">
window.___gcfg = {
    lang: 'en-US'
};

(function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
    
    window.googleApiLoaded = googleApiLoaded;
    var sc = document.createElement('script'); sc.type = 'text/javascript';
    sc.src = "https://apis.google.com/js/client.js?onload=googleApiLoaded";
    document.body.appendChild(sc);
})();

function shareOnFacebook() {
    var obj = {
        method: 'feed',
        redirect_uri: '{{ app.request.uri }}',
        link: '{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}{{ path('ctf_referral_refer', { ref: app.session.get('__MYREF') }) }}',
        picture: 'http://ehack.in/images/EHACK logo.png',
        name: 'EHack - Capture the flag',
        caption: 'The official Guiness attempt!',
        description: 'Creating awareness for cyber security.'
    };
    
    FB.ui(obj, function() {});
}

function shortenShareLink() {
    var request = gapi.client.urlshortener.url.insert({
        'resource': {
            'longUrl': document.getElementById('longUrl').innerHTML
        }
    });
    request.execute(function(response) {
        document.getElementById('shortUrl').innerHTML = '<a href="' + response.id + '" target="_blank">' + response.id + '</a>';
    });
}

window.onload = function() {
    $('#longUrlPopover').popover();    
};
var googleApiLoaded = function() {
    gapi.client.setApiKey('AIzaSyAyeYtXXWPBfkDpL2xI3BrbgP4o-Za1LTs');
    gapi.client.load("urlshortener", "v1", shortenShareLink);
};
</script>